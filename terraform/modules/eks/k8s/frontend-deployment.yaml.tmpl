apiVersion: apps/v1
kind: Deployment
metadata:
  name: ihaq-frontend
spec:
  selector:
    matchLabels:
      app: ihaq-frontend
  template:
    metadata:
      labels:
        app: ihaq-frontend
    spec:
      containers:
        - name: ihaq-frontend
          image: ${repo}:frontend
          ports:
            - containerPort: 80
          resources:
            requests:
              cpu: "100m"
              memory: "128Mi"
            limits:
              cpu: "300m"
              memory: "256Mi"
---
apiVersion: v1
kind: Service
metadata:
  name: ihaq-frontend
spec:
  selector:
    app: ihaq-frontend
  ports:
    - port: 80
      targetPort: 80
  type: NodePort
